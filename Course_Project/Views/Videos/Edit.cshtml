@model Video

@{
    ViewData["Title"] = "Edit";
}
<div class="mt-4 shadow">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">ویرایش</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CourseId" />
                <input type="hidden" asp-for="Url" />

                <table class="table table-striped ">
                    <tr class="row">
                        <td>
                            <label asp-for="Title" class="form-label">عنوان</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="row">
                        <td>
                            <label class="form-label">آپلود فایل ویدیو</label>
                            <input type="file" name="videoFile" accept="video/*" class="form-control" />
                        </td>
                    </tr>
                    <tr class="row">
                        <td>
                            <input type="submit" value="ذخیره" class="btn btn-success" />
                            <a asp-action="Details" asp-controller="Courses" asp-route-id="@Model.CourseId" class="btn btn-primary">بازگشت</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
