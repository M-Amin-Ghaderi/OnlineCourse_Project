@model IEnumerable<CourseViewModel>

<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">لیست دوره‌ها</div>
    <div class="card-body p-0">
        <table class="table table-warning table-striped mb-0">
            <thead>
                <tr>
                    <th>عنوان</th>
                    <th>مدرس</th>
                    <th>قیمت</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>