@model OnlineCourse.Web_Project.ViewModels.Course.CourseEditViewModel

@{
    ViewData["Title"] = "ویرایش " + Model.Title;
}
<main class="col-10 my-3 px-4">
    <div class="row justify-content-center ">

        <h1>ویرایش</h1>
        <div class="text-dark">
            <h3 class="text-center text-dark fw-bold">@Model.Title</h3>
            <div class="bg-info bg-opacity-50 fw-bold p-3 rounded-4 mb-2">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="TeacherProfileId" />
                    <div class="form-group mb-2">
                        <label asp-for="Title" class="control-label fw-bold"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Description" class="control-label fw-bold"></label>
                        <textarea asp-for="Description" rows="8" cols="32" class="form-control" placeholder="توضیحات دوره"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Price" class="control-label fw-bold"></label>
                        <input asp-for="Price" type="number" placeholder="1,200,000 تومان" class="form-control text-start" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ImageUrl" class="control-label"></label>
                        <img src="~/Images/@Model.ImageUrl" id="preview" class="d-block w-50 my-2" />
                        <input hidden asp-for="ImageUrl" class="form-control" />
                        <input type="file" asp-for="Image" id="imageInput" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <input type="submit" value="ذخیره تغییرات" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>

        </div>
        <div class="text-center">
            <h2>
                مدیریت ویدیوها
            </h2>
            <div id="videosSection" class="bg-info bg-opacity-50 fw-bold p-3 rounded-4">

                @await Html.PartialAsync("_VideoCreatePartial", new VideoCreateViewModel() { CourseId = Model.Id })

                @await Component.InvokeAsync("EditCourseVideos", new { courseId = Model.Id })
            </div>
        </div>
    </div>
    <div class="my-2">
        <a asp-action="Index" class="btn btn-outline-info">بازگشت به لیست</a>
    </div>


</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/Js/Teachers_CourseEdit.js"></script>
}
